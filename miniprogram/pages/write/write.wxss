/* pages/write/write.wxss */
page {
  height: 100%;
  background-color: #FFFFFF;
}

.paper {
  box-sizing: border-box;
  padding: 1rem;
  width: 750rpx;
  height: 100%;
  background-color: #FFFFFF;
}

.title {
  display: block;
  text-align: center;
  margin-bottom: 1rem;
  font-size: 18px;
  font-weight: bolder;
}

.content {
  display: block;
  flex: 1;
  margin-bottom: calc(28px + env(safe-area-inset-bottom)/2);
}

.left {
  text-align: left;
}

.center {
  text-align: center;
}

.right {
  text-align: center;
}


.bottom {
  position: fixed;
  bottom: 0;
  width: 100%;
}

.toolbar {
  height: 44px;
  display: flex;
  align-items: center;
  background-color: #FFFFFF;
}

.edit {
  font-size: 13px;
  line-height: 18px;
  margin-left: 0.5rem;
  opacity: 0.5;
}
.space{
  flex: 1;
}

.info {
  padding-left: 2rem;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  font-size: 13px;
  line-height: 18px;
}

.send-btn {
  margin-right: 2rem;
}

.footer {
  height: calc(env(safe-area-inset-bottom)/2);
}
