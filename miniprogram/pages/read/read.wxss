.content{
  width: 300px;
  height: 100%;
  font-weight: 300;
  line-height: 2;
  margin-bottom: 2rem;
}

.title {
  margin-bottom: 1rem;
  font-size: 18px;
  font-weight: bolder;
  width: 300px;
  text-align: left;
}

.info {
  text-align: left;
  width: 300px;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  font-size: 13px;
  line-height: 18px;
}

page {
  align-items: center;
  padding: 1rem;
  box-sizing: border-box;
  min-height: 100vh;
  background-color: white;
}