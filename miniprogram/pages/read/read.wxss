.content{
  width: 300px;
  height: 100%;
  font-weight: 300;
  line-height: 2;
  margin-bottom: 2rem;
}

.title {
  margin-bottom: 1rem;
  font-size: 18px;
  font-weight: bolder;
  width: 300px;
  text-align: left;
}

.info {
  text-align: left;
  width: 300px;
  display: flex;
  flex-direction: row;
  font-size: 13px;
  padding-bottom: 1rem;
}
.detail{
  flex: 1;
}

.delete{
  width: 30px;
  opacity: 0.5;
}

page {
  align-items: center;
  padding: 1rem;
  box-sizing: border-box;
  min-height: 100vh;
  background-color: white;
}